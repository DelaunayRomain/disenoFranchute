<%= will_paginate @articles, :container => false %>


<% @furnitures.shuffle.each do |furniture| %>
<%= link_to furniture.name, furniture_path(furniture) %>
<%= furniture.description %>
<%= furniture.dimensions %>
<%= link_to furniture.category.name, category_path(furniture.category) %>
<%= image_tag (furniture.image_general), class: "img-responsive"%>
<%= image_tag (furniture.image_detail), class: "img-responsive"%>
<% end %>


<%= will_paginate @articles, :container => false %>
